    </p>

    @Html.ActionLink("Şifre Değiştir", "Edit", "Users", new { id = ViewBag.UserId }, new { @class = "btn btn-primary" })
<div>
    @Html.ActionLink("Giriş Kayıtları", "Log", null, new { @class = "btn btn-secondary mt-3" })
</div>


}

