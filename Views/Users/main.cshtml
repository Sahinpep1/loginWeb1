    ViewBag.Title = "Giriş Başarılı";
}

<h2>Oturum açıldı.</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h2>Hoş geldiniz, @ViewBag.Username</h2>

    <p>
